  <head>
    <title>New Listing - Wanderlust</title>
    <link rel="stylesheet" href="/css/new.css" />
  </head>
  <body>
    <% layout("/layouts/boilerplate.ejs") %>
    <center>
      <form action="/listing/new" method="post">
        <input
          class="input"
          type="text"
          name="listing[title]"
          placeholder="Title"
        />
        <br /><br />
        <textarea
          id="description"
          class="input"
          name="listing[description]"
          cols="50"
          rows="4"
          placeholder="Description"
        ></textarea>
        <br /><br />
        <input
          class="input"
          type="text"
          name="listing[image]"
          placeholder="Image link"
        />
        <br /><br />
        <input
          class="input"
          type="number"
          name="listing[price]"
          placeholder="Price $xxx"
        />
        <br /><br />
        <input
          class="input"
          type="text"
          name="listing[location]"
          placeholder="Location"
        />
        <br /><br />
        <input
          class="input"
          type="text"
          name="listing[country]"
          placeholder="Country"
        />
        <br /><br />
        <button>Submit</button>
      </form>
    </center>
  </body>
